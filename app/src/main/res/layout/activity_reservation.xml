<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_reservation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <LinearLayout
        android:id="@+id/panel_rechercheUE"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="250sp"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_b">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="50">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="33"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/effectif_recherche"
                        style="@style/textRecherche"
                        android:text="Effectif : 0"
                        android:layout_weight="30"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <NumberPicker
                        android:id="@+id/effectif_recherche_number_picker"
                        android:gravity="center"
                        android:layout_weight="70"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="33"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_recheche"
                        style="@style/textRecherche"
                        android:text="jj / mm / aaaa"
                        android:layout_weight="30"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <ImageButton
                        android:id="@+id/date_recherche_calendar"
                        android:contentDescription="@string/boutonCalendarReservation"
                        android:src="@drawable/ic_action_go_to_today"
                        android:background="@color/white"
                        android:layout_weight="70"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="33"
                    android:orientation="horizontal">
                    <!--TODO-->
                    <!--Choix de l'horaire pour le cours-->
                </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="50">
                <!--TODO-->
                <!--Contenu du côté droit du panel-->
            </LinearLayout>

        </LinearLayout>
        <Button
            style="@style/boutonA"
            android:id="@+id/boutonRechercheUE"
            android:layout_marginTop="10sp"
            android:text="@string/boutonRechercheUE"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/panel_rechercheUE_results"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            style="@style/boutonA"
            android:id="@+id/boutonRechercheUE_new"
            android:layout_marginBottom="10sp"
            android:text="@string/boutonRechercheUE_new"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="250sp"
            android:orientation="horizontal"
            android:background="@drawable/rectangle">
        </LinearLayout>
    </LinearLayout>


    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer_reservation"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/darkgrey"
        android:dividerHeight="2dp"
        android:background="@color/blue"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        />

</android.support.v4.widget.DrawerLayout>